# .env.example - Copy this to .env and update values for your environment

# Environment
# Set to 'development' for debugging, 'production' for live
CI_ENVIRONMENT = development

# Application Settings
app.baseURL = 'http://localhost/Event-system/'
app.indexPage = ''
app.forceGlobalSecureRequests = false

# Session Configuration
app.sessionDriver = 'FileHandler'
app.sessionCookieName = 'ci_session'
app.sessionExpiration = 7200

# Database Configuration
# Default: MySQL on localhost with empty root password (XAMPP default)
# Update credentials if your MySQL setup is different
database.default.hostname = localhost
database.default.database = event_system
database.default.username = root
database.default.password = 
database.default.DBDriver = MySQLi
database.default.DBPrefix = 
database.default.port = 3306

# CSRF Protection (recommended to keep enabled for security)
app.CSRFProtection = true
app.CSRFTokenRandomize = true
app.CSRFCookieName = 'XSRF-TOKEN'
app.CSRFHeaderName = 'X-CSRF-TOKEN'
app.CSRFCookiePath = '/'
app.CSRFCookieDomain = ''
app.CSRFCookieSecure = false
app.CSRFCookieHttpOnly = true
app.CSRFCookieSameSite = 'Lax'

# Logging
# 1 = Errors, 2 = Debug, 3 = Informational, 4 = Warnings
log.threshold = 4
